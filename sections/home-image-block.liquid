<div class="home-image-block-section full-bg">
  <div class="full-page-width">
    <div class="inner-home-image-block-section">
        <div class="all-items">
          {% for block in section.blocks %}
            {%- assign textcolor = block.settings.text_color -%}
            <div class="collection-single-block">

              <div class="information-overlay">
               <h3 class="title" style="color:{{ textcolor }}">{{ block.settings.heading }}</h3>
              <div class="Shop-Now-Button">
              {% if block.settings.button != blank %}
              <a class="button slider-button" href="{{ block.settings.link }}" style="color:{{ textcolor }};border-color:{{ textcolor }}">{{ block.settings.button }}</a>
                {% endif %}
              </div>
              </div>
            {% if block.settings.image != blank %}
              <a class="collection-img" href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | img_url : '' }}" alt="{{ block.settings.image.alt }}">
               
              </a>
                {% endif %}
            
                
              
           
            </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>


