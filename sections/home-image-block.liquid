  {
    "name": "Home Image Block",
    "class": "full-background-image",
    "settings": [
    ],
    "blocks": [
    {
      "name": "Image Text",
      "type": "image-text",
      "settings": [
          {
             "type":  "image_picker",
             "id":    "image",
             "label": "Image"
          },
          {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
           },
           {
          "type":  "text",
          "id":    "button",
          "label": "Button"
           },
           {
          "type":  "url",
          "id":    "link",
          "label": "Link"
           },
           {
              "type": "color",
              "id":   "background_color",
              "label":"Background Color"
           },
           {
              "type": "color",
              "id":   "text_color",
              "label":"Text Color"
           }
      ]
    }
    ],
    "presets":[
    {
      "name": "Home Image Block",
      "category": "Custom"
    }
    ]
  }
{% endschema %}

