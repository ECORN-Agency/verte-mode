<div class="home-block-image-section home-custom-product">
  <div class="p-20">
    <div class="inner-home-block-image-section">
      {% if section.settings.heading != blank %}
      <h2 class="home-image-section-main-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="all-items">
          {% for block in section.blocks %}
            <div class="collection-single-block">
            {% if block.settings.image != blank %}
              <div class="img-scale"> 
              <a href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | img_url : '' }}">
              </a>
              </div>
              <h3 class="title">{{ block.settings.heading }}</h3>
              {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Home Custom Product",
    "settings": [
        {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
        }
    ],
    "blocks": [
    {
      "name": "Image Text",
      "type": "image-text",
      "settings": [
          {
             "type":  "image_picker",
             "id":    "image",
             "label": "Image"
          },
          {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
           },
           {
          "type":  "url",
          "id":    "link",
          "label": "Link"
           }
      ]
    }
    ],
    "presets":[
    {
      "name": "Home Custom Product",
      "category": "Custom"
    }
    ]
  }
{% endschema %}