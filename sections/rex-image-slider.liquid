            "type": "image_picker",
            "id":   "image",
            "label":"Image"
          },
          {
            "type": "url",
            "id":   "link",
            "label":"Link"
          },
          {
            "type": "text",
            "id":   "text",
            "label":"Text"
          },
          {
            "type": "richtext",
            "id":   "subtext",
            "label":"Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Rex Image Slider",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

