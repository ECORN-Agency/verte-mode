     "class": "section-slider-home",
    "settings": [],
    "blocks":[
    {
     "name": "Slider",
     "type": "slider",
     "settings": [
          {
            "type": "image_picker",
            "id":   "image",
            "label":"Image"
          },
          {
            "type": "text",
            "id":   "heading",
            "label":"Heading"
          },
          {
            "type": "text",
            "id":   "sub_heading",
            "label":"Sub Heading"
          },
          {
            "type": "text",
            "id":   "button",
            "label":"Button"
          },
          {
            "type": "url",
            "id":   "link",
            "label":"Link"
          },
          {
              "type": "color",
              "id":   "text_color",
              "label":"Buuton/Text Color"
          }
     ]
    }
