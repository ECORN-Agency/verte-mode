<div id="section-{{ section.id }}" class="home-image-block-section section-{{ section.id }} home-custom-collection">
  <div class="full-page-width">
    <div class="inner-home-image-block-section">
      {% if section.settings.heading != blank %}
      <h2 class="home-image-section-main-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="all-items">
          {% for block in section.blocks %}
            <div class="custom-collection-single-block">
            {% if block.settings.image != blank %}
              <a class="collection-img" href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | img_url : '' }}" alt="{{ block.settings.image.alt }}">
              </a>
              {% endif %}
            <div class="cutom-collection-text">
              {{ block.settings.subtext }}
             {% if block.settings.link != blank %}
             <div class="Shop-Now-Button">
              <a class="button slider-button" href="{{ block.settings.link }}">SHOP NOW</a>
             </div> 
              {% endif %}
            </div>
            
            </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>

<script>

  jQuery('#section-{{ section.id }} .inner-home-image-block-section .all-items').slick({
    slidesToShow: 2,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });

</script>


{% schema %}
  {
    "name": "Home Custom Collection",
    "class": "home-featured-brands",
    "settings": [
       {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
        }
    ],
     "blocks": [
    {
      "name": "Image Text",
      "type": "image-text",
      "settings": [
          {
             "type":  "image_picker",
             "id":    "image",
             "label": "Image"
          },
          {
          "type":  "richtext",
          "id":    "subtext",
          "label": "Content"
           },
           {
          "type":  "url",
          "id":    "link",
          "label": "Link"
           }
      ]
    }
    ],
    "presets": [
    {
       "name": "Home Custom Collection",
       "category": "custom"
    }
    ]
  }
{% endschema %}

