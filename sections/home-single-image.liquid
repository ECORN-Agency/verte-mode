<div class="{{ section.settings.custom_class }} home-single-image-section">

    <div class="inner-home-single-image-section">
      <h2 class="single-image-heading">{{ section.settings.heading }}</h2>
      {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url : '' }}" alt="{{ section.settings.image.alt }}">
      {% endif %}
      <div class="single-image-button">
      <a class="button" href="{{ section.settings.link }}">{{ section.settings.button }}</a>
      </div>
    </div>

</div>


{% schema %}
  {
    "name": "Home Single Image",
    "settings": [
       {
          "type":  "text",
          "id":    "custom_class",
          "label": "Custom Class"
       },
       {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
       },
       {
          "type":  "image_picker",
          "id":    "image",
          "label": "Image"
       },
       {
          "type": "text",
          "id":   "button",
          "label":"Button"
       },
       {
         "type":  "url",
         "id":    "link",
         "label": "Link"
        }
    ],
    "presets": [
    {
      "name": "Home Single Image",
      "category": "Custom"
    }
    ]
  }
{% endschema %}

