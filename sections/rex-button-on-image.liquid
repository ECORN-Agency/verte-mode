<div class="rex-button-on-image">
  <div class="inner-rex-button-on-image" {% if section.settings.image != blank %}style="background:url({{ section.settings.image | img_url : '' }});" {% endif %}>
    <div class="button-section">
      <a class="button" href="{{ section.settings.link }}">{{ section.settings.button }}</a>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Rex Button On Image",
    "settings": [
      {
        "type": "image_picker",
        "id":   "image",
        "label":"Image"
      },
      {
        "type": "text",
        "id":   "button",
        "label":"Button"
      },
      {
        "type": "url",
        "id":   "link",
        "label":"Link"
      }
    ],
    "presets": [
      {
        "name": "Rex Button On Image",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

