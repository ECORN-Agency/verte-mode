<div class="home-block-image-section">
  <div class="p-20">
    <div class="inner-home-block-image-section">
      {% if section.settings.heading != blank %}
      <h2 class="home-image-section-main-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        <div class="all-items">
          {% for block in section.blocks %}
            <div class="collection-single-block">
            {% if block.settings.image != blank %}
              <div class="img-scale"> 
              <a href="{{ block.settings.link }}">
              <img src="{{ block.settings.image | img_url : '' }}" alt="{{ block.settings.image.alt }}">
              </a>
              </div>
              <h3 class="title">{{ block.settings.heading }}</h3>
            {% if block.settings.para != blank %} <div class="title_para">{{ block.settings.para }}</div> {% endif %}
{% if block.settings.link != blank %}
<div class="link_arrow">
<a href="{{ block.settings.link }}"><img src="https://cdn.shopify.com/s/files/1/0543/5775/4027/files/arrow-iconn.png?v=1669731092" />
</a>
</div>
{% endif %}
              {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Home Block Image",
    "settings": [
        {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
        }
    ],
    "blocks": [
    {
      "name": "Image Text",
      "type": "image-text",
      "settings": [
          {
             "type":  "image_picker",
             "id":    "image",
             "label": "Image"
          },
          {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
           },
          {
          "type":  "richtext",
          "id":    "para",
          "label": "Paragraph"
           },
           {
          "type":  "url",
          "id":    "link",
          "label": "Link"
           }
      ]
    }
    ],
    "presets":[
    {
      "name": "Home Block Image",
      "category": "Custom"
    }
    ]
  }
{% endschema %}

