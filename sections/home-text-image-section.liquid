<div class="home-image-block-section full-bg">
  <div class="full-page-width">
    <div class="inner-home-image-block-section">
        
        <div class="collection-single-block">

              <div class="left-image-col">
                {% if section.settings.image != blank %}
                 <img src="{{ section.settings.image | img_url : '' }}" alt="{{ section.settings.image.alt }}"/>
                {% endif %}
              </div>

            <div class="information-text-right">
                {% if section.settings.heading != blank %}
                    <h2>{{ section.settings.heading }}</h2>
                {% endif %} 

                {% if section.settings.rich-content != blank %}
                   <p>
                  {{ section.settings.rich-content }}
                   </p>
                {% endif %}  
                 
            </div>
       </div>
       
    </div>
  </div>
      {% if section.settings.link != blank %}
  <a href="{{ section.settings.link }}" class="link-section">link</a>
      {% endif %}  
</div>


{% schema %}
  {
    "name": "Home Image Text Block",
    "class": "full-background-image-with-text",
    "settings": [
       {
             "type":  "image_picker",
             "id":    "image",
             "label": "Image"
       },
       {
          "type":  "text",
          "id":    "heading",
          "label": "Heading"
      }, 
      {
          "type":  "richtext",
          "id":    "rich-content",
          "label": "Text"
      },
       {
          "type":  "url",
          "id":    "link",
          "label": "Link"
           }
    ],
    "presets":[
    {
      "name": "Home Image Text Block",
      "category": "Custom"
    }
    ]
  }
{% endschema %}