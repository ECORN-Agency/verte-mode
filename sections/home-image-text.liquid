<style>
  .inner-home-image-text-section.for-mobile {
      display: none;
  }
  .gradient.template-index .index--home-img-text-class.home-image-text-section .home-image-all-blocks {
      max-width: unset !important;
      width: 100%;
  }
  @media only screen and (max-width: 600px) {
  .inner-home-image-text-section.for-mobile {
      display: block;
  }

  .inner-home-image-text-section.for-desctop {
      display: none;
  }
  }
</style>

<div id="section-{{ section.id }}" class="{{ template.name }}--home-img-text-class home-image-text-section">
  <div class="page-width">
    <div class="inner-home-image-text-section ">
      <h2 class="home-image-section-main-heading">
        <a href="{{ section.settings.link }}">{{ section.settings.heading }}</a>
      </h2>
      <p class="home-image-sub-heading">{{ section.settings.sub_heading }}</p>
      <div class="home-image-all-blocks">
        {% for block in section.blocks %}
          <div class="single-block">
            <a href="{{ block.settings.link }}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url : '' }}" alt="{{ block.settings.image.alt}}">
              {% endif %}
              <h3 class="single-block-heading">{{ block.settings.heading }}</h3>
              {{ block.settings.subtext }}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
 <style>
   #section-{{ section.id }} .slick-next {
     right: 5px;
   }
   #section-{{ section.id }} .slick-prev {
     left: 5px;
   }
 </style>

<script>
  jQuery('#section-{{ section.id }} .home-image-all-blocks').slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
</script>
 
